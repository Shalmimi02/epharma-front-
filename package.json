{
  "name": "epharma",
  "version": "3.3.17",
  "private": true,
  "author": "",
  "description": "Systeme de gestion des pharmacie",
  "license": "MIT",
  "main": "electron-main.js",
  "scripts": {
    "package": "electron-forge package",
    "start": "electron-forge start",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "make": "electron-builder --publish never",
    "publish": "electron-builder --publish always",
    "upgrading": "npm version patch --force"
  },
  "build": {
    "appId": "ga.epharma.epg",
    "productName": "Epharma",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "installerSidebar.bmp",
      "uninstallerSidebar": "uninstallerSidebar.bmp"
    },
    "win": {
      "icon": "build/EPHARMAicon2.png",
      "target": "nsis",
      "executableName": "epharma-epgV3"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.2",
    "basic-ftp": "^5.0.5",
    "bootstrap": "^4.6.2",
    "chart.js": "^4.4.4",
    "codex": "^0.2.3",
    "core-js": "^3.8.3",
    "dotenv": "^16.4.7",
    "electron-log": "^5.3.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "fast-xml-parser": "^4.5.1",
    "file-saver": "^2.0.5",
    "html2pdf.js": "^0.10.2",
    "jquery": "^3.7.1",
    "jsbarcode": "^3.11.6",
    "mitt": "^3.0.1",
    "moment": "^2.30.1",
    "primevue": "^3.53.0",
    "quill": "^2.0.2",
    "register-service-worker": "^1.7.2",
    "ssh2-sftp-client": "^11.0.0",
    "update-electron-app": "^3.1.1",
    "vue": "^3.2.13",
    "vue-axios": "^3.5.2",
    "vue-class-component": "^8.0.0-0",
    "vue-preloader": "^1.1.4",
    "vue-router": "^4.0.3",
    "vuex": "^4.0.0",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron-forge/publisher-github": "^7.6.1",
    "@electron/fuses": "^1.8.0",
    "@types/jest": "^27.0.1",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-pwa": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-unit-jest": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.8",
    "@vue/test-utils": "^2.0.0-0",
    "@vue/vue3-jest": "^27.0.0-alpha.1",
    "babel-jest": "^27.0.6",
    "browserify-zlib": "^0.2.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8",
    "jest": "^27.0.5",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "path-browserify": "^1.0.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^27.0.4",
    "typescript": "~4.5.5",
    "util": "^0.12.5"
  }
}
